{
  "manifest_version": 2,
  "name": "Kitspace WebExtension",
  "description": "View PCB files online and automate buying parts from Digikey, Mouser etc.",
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/blob/*.kicad_pcb"],
      "js": ["contentScript.bundle.js"],
      "css": []
    }
  ],
  "permissions": [
    "tabs",
    "webNavigation",
    "scripting",
    "https://processor.master.kitspace.dev",
    "https://github.com/*"
  ],
  "web_accessible_resources": ["content.styles.css", "icon-128.png", "icon-34.png"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
